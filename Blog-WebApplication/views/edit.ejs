<!-- Header -->
<%- include("partials/header.ejs", { headerPath: "Edit Post" }) %>

  <!-- Bootstrap Styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <section class="edit__section d-flex justify-content-center align-items-center"
    style="min-height: calc(100vh - 68px - 60px); background-color: #f8f9fa;">
    <div class="edit__container p-4 shadow-lg bg-white rounded" style="width: 50%;">
      <h2 class="text-center mb-4">Edit Post</h2>
      <form action="/edit" method="post">
        <div class="mb-3">
          <label for="title" class="form-label">Current Title:</label>
          <input type="text" id="title" name="title" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="newTitle" class="form-label">New Title:</label>
          <input type="text" id="newTitle" name="newTitle" class="form-control">
        </div>
        <div class="mb-3">
          <label for="newContent" class="form-label">New Content:</label>
          <textarea id="newContent" name="newContent" class="form-control" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Edit</button>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <%- include("partials/footer.ejs") %>