<!-- Header -->
<%- include("partials/header.ejs", { headerPath: "Create Post" }) %>

  <!-- Bootstrap Styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <section class="create__section d-flex justify-content-center align-items-center"
    style="min-height: calc(100vh - 68px - 60px); background-color: #f8f9fa;">
    <div class="create__container p-4 shadow-lg bg-white rounded" style="width: 50%;">
      <h2 class="text-center mb-4">Create a New Post</h2>
      <form action="/create" method="post">
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input type="text" id="title" name="title" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Content:</label>
          <textarea id="content" name="content" class="form-control" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <%- include("partials/footer.ejs") %>